<Window x:Class="Empresa_Fabricacion.VentanaCorreo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Empresa_Fabricacion"
        mc:Ignorable="d"
        Title="Ventana Correo" Height="200" Width="400" MinWidth="400" MinHeight="200" Icon="Imagenes/Nishad2m8-Hologram-Dock-My-computer.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <UniformGrid Name="grid_material" Columns="1" Grid.Row="3">
            <Label Content="Ponga su direccion de correo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
            <TextBox Name="tb_m_correo" HorizontalAlignment="Center" ToolTip="Escribir su direccion de correo" Width="220" Height="30" FontSize="18"/>
            <Button Content="Enviar" Name="bt_enviarcorreo" Width="50" Height="25" ToolTip="Envio de correo" Click="bt_enviarcorreo_Click" FontSize="16"/>
        </UniformGrid>
    </Grid>
</Window>
