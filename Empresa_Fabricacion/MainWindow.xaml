    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="7">
            <Button Name="bt_fabricacion" Content="FABRICACIONES" Background="LightBlue" Margin="10" ToolTip="Boton para fabricacion" Click="bt_fabricacion_Click"/>
            <Button Name="bt_material" Content="MATERIALES" Background="LightBlue" Margin="10" ToolTip="Boton para material" Click="bt_material_Click"/>
            <Button Name="bt_producto" Content="PRODUCTOS" Background="LightBlue" Margin="10" ToolTip="Boton para producto" Click="bt_producto_Click"/>
            <Button Name="bt_inicio" Content="INICIO" Background="LightBlue" Margin="10" ToolTip="Boton de inicio o finalice de sesion" Click="bt_inicio_Click"/>
            <Button Name="bt_cliente" Content="CLIENTES" Background="LightBlue" Margin="10" ToolTip="Boton para clientes" Click="bt_cliente_Click"/>
            <Button Name="bt_proveedor" Content="PROVEEDORES" Background="LightBlue" Margin="10" ToolTip="Boton para proveedores" Click="bt_proveedor_Click"/>
